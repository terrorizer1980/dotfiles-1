" Keymappings

" Navigate swaps
nnoremap <C-J> <C-W><C-J>
nnoremap <C-K> <C-W><C-K>
nnoremap <C-L> <C-W><C-L>
nnoremap <C-H> <C-W><C-H>

" Next/previous tab
nnoremap <Tab> :bnext<CR>
nnoremap <S-Tab> :bprevious<CR>

" Map leader to comma
let mapleader = ","

nnoremap <Leader>b :CtrlPBuffer<CR>

" vim:ft=vim
