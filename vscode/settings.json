{
  // =======================================================
  // General settings
  // -------------------------------------------------------
  "breadcrumbs.enabled": false,
  "code-runner.showRunIconInEditorTitleMenu": false,
  "csharp.format.enable": false,
  "csharp.referencesCodeLens.enabled": false,
  "css.validate": false,
  "editor.cursorBlinking": "phase",
  "editor.fontFamily": "Fira Code",
  "editor.fontLigatures": true,
  "editor.fontSize": 13,
  "editor.formatOnSave": true,
  "editor.lineHeight": 20,
  "editor.lineNumbers": "relative",
  "editor.minimap.enabled": false,
  "editor.minimap.renderCharacters": false,
  "editor.renderIndentGuides": false,
  "editor.renderWhitespace": "none",
  "editor.rulers": [],
  "editor.tabSize": 2,
  "elixirLS.fetchDeps": false,
  "elixirLS.suggestSpecs": false,
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "extensions.ignoreRecommendations": false,
  "git.rebaseWhenSync": true,
  "git.showPushSuccessNotification": true,
  "gitlens.blame.avatars": false,
  "gitlens.blame.toggleMode": "window",
  "gitlens.codeLens.enabled": false,
  "gitlens.currentLine.enabled": false,
  "gitlens.hovers.enabled": false,
  "javascript.format.enable": false,
  "javascript.suggestionActions.enabled": false,
  "ruby.format": "rubocop",
  "rust-client.channel": "stable",
  "search.location": "sidebar",
  "terminal.external.osxExec": "iTerm.app",
  "terminal.integrated.fontSize": 13,
  "terminal.integrated.shell.osx": "/bin/zsh",
  "window.zoomLevel": 0,
  "workbench.activityBar.visible": true,
  "workbench.editor.showTabs": true,
  "workbench.list.keyboardNavigation": "filter",
  "workbench.sideBar.location": "left",
  "workbench.startupEditor": "none",
  "workbench.statusBar.feedback.visible": false,

  // =======================================================
  // File associations
  // -------------------------------------------------------
  "files.associations": {
    "*.eex": "HTML (EEx)",
    "gitignore": "gitignore",
    "pryrc": "ruby",
    "spacemacs": "lisp",
    "TODO": "markdown",
    "vimrc": "viml",
    "zlogin": "shellscript",
    "zlogout": "shellscript",
    "zpreztorc": "shellscript",
    "zshenv": "shellscript",
    "zshrc": "shellscript"
  },

  // =======================================================
  // Color customizations
  // -------------------------------------------------------
  "workbench.colorCustomizations": {
    "[Default Dark+]": {
      "statusBar.background": "#222"
    },
    "[Default Light+]": {
      "statusBar.background": "#F3F3F3",
      "statusBar.foreground": "#444"
    }
  },

  "editor.tokenColorCustomizations": {
    "[Default Dark+]": {
      "textMateRules": [
        {
          "scope": [
            "keyword.operator.assignment.elixir",
            "keyword.operator.other.elixir"
          ],
          "settings": {
            "foreground": "#4EC9B0"
          }
        },
        {
          "scope": "constant.other.symbol.elixir",
          "settings": {
            "foreground": "#B5CEA8"
          }
        }
      ]
    },
    "[Default Light+]": {
      "textMateRules": [
        {
          "scope": [
            "keyword.operator.assignment.elixir",
            "keyword.operator.other.elixir"
          ],
          "settings": {
            "foreground": "#267F99"
          }
        },
        {
          "scope": "constant.other.symbol.elixir",
          "settings": {
            "foreground": "#795E26"
          }
        }
      ]
    },
    "[dark-plus-syntax]": {
      "comments": "#777"
    }
  },

  // =======================================================
  // Vim settings
  // -------------------------------------------------------
  "vim.camelCaseMotion.enable": true,
  "vim.debug.silent": true,
  "vim.easymotion": true,
  "vim.easymotionMarkerFontFamily": "Monoid",
  "vim.easymotionMarkerFontSize": "13",
  "vim.easymotionMarkerHeight": 18,
  "vim.easymotionMarkerWidthPerChar": 8,
  "vim.enableNeovim": true,
  "vim.leader": ",",
  "vim.neovimPath": "/usr/local/bin/nvim",
  "vim.showmodename": true,
  "vim.sneak": true,

  // Normal mode keybindings
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before": ["<leader>", "/"],
      "commands": ["workbench.action.toggleSidebarVisibility"]
    },
    {
      "before": ["<leader>", "f"],
      "commands": ["workbench.action.quickOpen"]
    },
    {
      "before": ["[", "<Space>"],
      "commands": ["editor.action.insertLineBefore"]
    },
    {
      "before": ["]", "<Space>"],
      "commands": ["editor.action.insertLineAfter"]
    },
    {
      "before": ["[", "e"],
      "commands": ["editor.action.moveLinesUpAction"]
    },
    {
      "before": ["]", "e"],
      "commands": ["editor.action.moveLinesDownAction"]
    },
    {
      "before": ["<leader>", "t", "f"],
      "commands": [
        {
          "command": "workbench.action.tasks.runTask",
          "args": "Test Current File"
        }
      ]
    },
    {
      "before": ["<leader>", "t", "n"],
      "commands": [
        {
          "command": "workbench.action.tasks.runTask",
          "args": "Run Nearest Test"
        }
      ]
    },
    {
      "before": ["<leader>", "d", "n"],
      "commands": [
        {
          "command": "workbench.action.tasks.runTask",
          "args": "Debug Nearest Test"
        }
      ]
    },
    {
      "before": ["<leader>", "t", "l"],
      "commands": [
        {
          "command": "workbench.action.tasks.runTask",
          "args": "Run Last Test"
        }
      ]
    },
    {
      "before": ["<leader>", "d", "l"],
      "commands": [
        {
          "command": "workbench.action.tasks.runTask",
          "args": "Debug Last Test"
        }
      ]
    }
  ],

  // Insert mode keybindings
  "vim.insertModeKeyBindings": [
    {
      "before": ["j", "j"],
      "after": ["<Esc>"]
    },
    {
      "before": ["j", "w"],
      "after": ["<Esc>"],
      "commands": ["workbench.action.files.save"]
    }
  ],
  "workbench.colorTheme": "Gruvbox Minor Dark Hard"
}
